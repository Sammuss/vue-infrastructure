{
  "tasks": [
    {
      "command": "npx",
      "args": ["prettier", "--ignore-unknown", "--write", "${staged}"],
      "pathMode": "absolute"
    },
    {
      "name": "eslint",
      "group": "pre-commit",
      "pathMode": "absolute",
      "cwd": "Client",
      "command": "npm",
      "args": ["run", "lint", "${staged}"],
      "include": ["**/*.ts", "**/*.vue", "**/*.js"]
    }
  ]
}
